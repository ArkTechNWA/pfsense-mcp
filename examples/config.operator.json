{
  "_comment": "Operator: Read + restart services, flush caches",
  "pfsense": {
    "host": "192.168.1.1",
    "port": 443,
    "api_key_env": "PFSENSE_API_KEY",
    "verify_ssl": true
  },
  "permissions": {
    "read": true,
    "service": true,
    "config": false,
    "dangerous": false
  },
  "neverhang": {
    "api_timeout": 30000,
    "connect_timeout": 10000
  },
  "fallback": {
    "enabled": true,
    "model": "claude-haiku-4-5",
    "api_key_env": "PFCLAUDE_FALLBACK_KEY"
  }
}
